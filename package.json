{
  "name": "telegram-contest",
  "version": "1.0.0",
  "author": "Pichugin Maxim <klayton.alan@gmail.com>",
  "description": "charts app for Telegram contest",
  "license": "MIT",
  "main": "src/index.js",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:js": "rollup -c --environment NODE_ENV:production",
    "build:css": "postcss src/styles/main.css -o dist/styles.css --env production",
    "start": "npm run start:css | npm run start:js",
    "start:css": "postcss src/styles/main.css -o tmp/styles.css --watch",
    "start:js": "rollup -c --watch",
    "lint": "eslint src/**/*.js"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "autoprefixer": "^9.5.0",
    "eslint": "4.5.0",
    "postcss": "^7.0.14",
    "postcss-cli": "^6.1.2",
    "postcss-custom-media": "^7.0.7",
    "postcss-import": "^12.0.1",
    "postcss-nesting": "^7.0.0",
    "postcss-url": "^8.0.0",
    "rollup": "^1.7.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-filesize": "^6.2.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-uglify": "^6.0.2"
  },
  "dependencies": {
    "cssnano": "^4.1.10"
  },
  "browsers": [
    "defaults"
  ]
}
